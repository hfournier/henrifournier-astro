---
type Props = {
	rowClass: string
}
const { rowClass } = Astro.props
---

<div
	class:list={[
		"bg-grayish-50 dark:bg-grayish-950 relative col-start-1 mt-4.5 h-10 py-2 md:col-start-2 md:mt-11",
		rowClass
	]}
>
	<div class="hexagon bg-grayish-200/25 dark:bg-grayish-800/25 absolute h-6"></div>
	<div class="hexagon bg-primary-600 h-6" data-hexagon-marker></div>
</div>

<script is:inline>
	if (!("animationTimeline" in document.documentElement.style)) {
		//@ts-expect-error "import" is not defined
		import("https://flackr.github.io/scroll-timeline/dist/scroll-timeline.js")
	}
</script>

<style>
	[data-hexagon-marker] {
		opacity: 0;
		animation: show-hexagon linear both;
		animation-timeline: view(block);
		animation-range: contain 20% contain 28%;
		animation-duration: 1ms;
	}

	@keyframes show-hexagon {
		to {
			opacity: 1;
		}
	}
</style>
