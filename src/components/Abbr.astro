---
import type { HTMLAttributes } from "astro/types"

interface Props extends Omit<HTMLAttributes<"abbr">, "title"> {
	title: string
}
const { class: classList, title, ...attrs } = Astro.props
---

<abbr
	class:list={[
		"decoration-secondary-700 dark:decoration-secondary-200 decoration-2 underline-offset-4",
		classList
	]}
	title={title}
	{...attrs}
>
	<slot />
</abbr>
