---
import { Icon } from "astro-icon/components"
---

<div class="sticky bottom-3 left-full -mr-4 w-fit">
	<a href="#top" class="opacity-50 drop-shadow-md transition-opacity hover:opacity-100">
		<div
			class="hexagon bg-grayish-50/0 hover:bg-grayish-50/60 dark:bg-grayish-900/0 dark:hover:bg-grayish-900/60"
		>
			<div class="hexagon bg-primary-600 p-1 dark:bg-primary-500">
				<div class="hexagon bg-grayish-50 dark:bg-grayish-950">
					<span class="sr-only">Go to top</span>
					<Icon
						name="mdi:arrow-up-thin"
						class="aspect-hexagon size-5 text-primary-600 dark:text-primary-500 sm:size-6 md:size-8"
						aria-hidden="true"
					/>
				</div>
			</div>
		</div>
	</a>
</div>
