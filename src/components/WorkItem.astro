---
import { Image } from "astro:assets"
import type { CollectionEntry } from "astro:content"

type Props = { work: CollectionEntry<"work"> }
const { work } = Astro.props
---

<button
	class="hexagon hover:hexarect group col-span-3 row-span-2 rounded bg-grayish-700 p-0.5 transition-[clip-path] hover:z-20 [&:nth-child(1)]:col-start-1 [&:nth-child(1)]:row-start-1 sm:[&:nth-child(2)]:col-start-3 sm:[&:nth-child(2)]:row-start-2 md:[&:nth-child(2)]:col-start-5 md:[&:nth-child(2)]:row-start-1 sm:[&:nth-child(3)]:col-start-1 sm:[&:nth-child(3)]:row-start-3 md:[&:nth-child(3)]:col-start-3 md:[&:nth-child(3)]:row-start-2 lg:[&:nth-child(3)]:col-start-9 lg:[&:nth-child(3)]:row-start-1 sm:[&:nth-child(4)]:col-start-3 sm:[&:nth-child(4)]:row-start-4 md:[&:nth-child(4)]:col-start-1 md:[&:nth-child(4)]:row-start-3 lg:[&:nth-child(4)]:col-start-3 lg:[&:nth-child(4)]:row-start-2 sm:[&:nth-child(5)]:col-start-1 sm:[&:nth-child(5)]:row-start-5 md:[&:nth-child(5)]:col-start-5 md:[&:nth-child(5)]:row-start-3 lg:[&:nth-child(5)]:col-start-7 lg:[&:nth-child(5)]:row-start-2"
	data-dialog={`dlg_${work.slug}`}
>
	<div
		class="hexagon group-hover:hexarect relative rounded bg-grayish-50 transition-[clip-path] dark:bg-grayish-950"
	>
		<Image
			class="hexagon group-hover:hexarect rounded object-cover p-2 transition-[clip-path]"
			src={work.data.image}
			alt={work.data.imageAlt}
			widths={[256, 262, 338, 364, 387, 571, work.data.image.width]}
			sizes={`(max-width: 432px) 364px, (max-width: 639px) 571px, (max-width: 767px) 387px, (max-width: 1023px) 338px, (max-width: 1279px) 262px, (min-width: 1280px) 256px, ${work.data.image.width}px`}
			title={work.data.description}
		/>
		<div class="absolute bottom-4 w-full text-center text-sm font-medium md:text-base">
			{work.data.name}
		</div>
	</div>
</button>

<script>
	const buttons = document.querySelectorAll("button.hexagon")
	if (buttons && buttons.length > 0) {
		for (const button of buttons) {
			button.addEventListener("click", (e: Event) => {
				const btn = e.currentTarget as HTMLButtonElement
				const dialog = document.getElementById(btn.dataset.dialog as string) as HTMLDialogElement
				dialog!.showModal()
			})
		}
	}
</script>
