---
export type Props = {
	title: string
}
const { title } = Astro.props
---

<div class="group grid grid-cols-3 grid-rows-3">
	<div
		class="[&:hover~_div:nth-child(10)]:tilt-up [&:hover~_div:nth-child(10)]:tilt-left col-start-1 row-start-1"
	>
	</div>
	<div class="[&:hover~_div:nth-child(10)]:tilt-up col-start-2 row-start-1"></div>
	<div
		class="[&:hover~_div:nth-child(10)]:tilt-up [&:hover~_div:nth-child(10)]:tilt-right col-start-3 row-start-1"
	>
	</div>
	<div class="[&:hover~_div:nth-child(10)]:tilt-left col-start-1 row-start-2"></div>
	<div class="col-start-2 row-start-2"></div>
	<div class="[&:hover~_div:nth-child(10)]:tilt-right col-start-3 row-start-2"></div>
	<div
		class="[&:hover~_div:nth-child(10)]:tilt-down [&:hover~_div:nth-child(10)]:tilt-left col-start-1 row-start-3"
	>
	</div>
	<div class="[&:hover~_div:nth-child(10)]:tilt-down col-start-2 row-start-3"></div>
	<div
		class="[&:hover~_div:nth-child(10)]:tilt-down [&:hover~_div:nth-child(10)]:tilt-right col-start-3 row-start-3"
	>
	</div>

	<div
		class="tilting-card border-grayish-300 bg-grayish-100 group-hover:shadow-primary-500/40 dark:border-grayish-600 dark:bg-grayish-700 pointer-events-none col-span-full row-span-full flex h-full w-full flex-col border p-2 group-hover:shadow-lg [&_a]:pointer-events-auto"
	>
		<div
			class="border-grayish-300 bg-grayish-50 dark:border-grayish-600 dark:bg-grayish-400 border"
		>
			<slot name="svg" />
		</div>
		<div class="pt-2">
			<h3 class="text-primary-600 dark:text-primary-400 text-xl font-bold">{title}</h3>
			<p
				class="text-grayish-900 dark:text-grayish-100 [&_a]:text-secondary-800 [&_a]:hover:text-secondary-900 [&_a]:hover:decoration-secondary-900 dark:[&_a]:text-secondary-100 dark:[&_a]:hover:text-secondary-50 dark:[&_a]:hover:decoration-secondary-100 text-sm [&_a]:rounded-t-sm [&_a]:rounded-b-none [&_a]:underline! [&_a]:underline-offset-2"
			>
				<slot />
			</p>
		</div>
	</div>
</div>
