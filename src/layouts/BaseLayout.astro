---
import "../styles/fonts.css"
import "../styles/global.css"
import Footer from "@components/Footer.astro"
import Header from "@components/Header.astro"
import BaseHead from "@components/BaseHead.astro"
---

<html lang="en" class="scrollable motion-safe:scroll-smooth">
	<head>
		<BaseHead><slot name="head" slot="head" /></BaseHead>
	</head>
	<body
		id="top"
		class="bg-grayish-50 text-grayish-900 dark:bg-grayish-950 dark:text-grayish-100 grid min-h-dvh grid-cols-[[full-width-start]_minmax(1rem,1fr)_[content-start]_min(100vw-2rem,1280px)_[content-end]_minmax(1rem,1fr)_[full-width-end]] grid-rows-[auto_minmax(0,1fr)_auto]"
	>
		<Header class="col-[content]" />
		<slot />
		<Footer class="col-[full-width]" />
	</body>
</html>
