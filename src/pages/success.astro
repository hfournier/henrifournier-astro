---
import MainLayout from "@layouts/MainLayout.astro"
import Heading1 from "@components/Heading1.astro"
import Seo, { type SeoType } from "@components/seo/Seo.astro"

const seo: SeoType = {
	title: "Contact Success | Henri Fournier Dev",
	description: "Thanks for reaching out! I'll be in touch shortly."
}
---

<MainLayout>
	<Seo {seo} slot="head" />

	<section class="mx-auto grid place-content-center px-2 md:px-8 lg:px-12">
		<Heading1 justify="text-left">Success</Heading1>
		<p>Thanks for reaching out! I'll be in touch shortly.</p>
	</section>
</MainLayout>
